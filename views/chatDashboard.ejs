<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat – StudyMatch</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            background: var(--color-bg);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 30%, rgba(0, 113, 227, 0.08) 0%, transparent 50%),
                        radial-gradient(circle at 80% 70%, rgba(118, 75, 162, 0.08) 0%, transparent 50%);
            z-index: 0;
            animation: gradient 20s ease infinite;
            background-size: 200% 200%;
        }

        .header-container {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: saturate(180%) blur(20px);
            -webkit-backdrop-filter: saturate(180%) blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        header {
            max-width: 1200px;
            margin: 0 auto;
            padding: 16px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 21px;
            font-weight: 600;
            color: var(--color-text-primary);
            text-decoration: none;
            letter-spacing: -0.022em;
            background: var(--gradient-accent);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        header nav {
            display: flex;
            gap: 8px;
        }

        header nav a {
            padding: 8px 16px;
            font-size: 17px;
            color: var(--color-text-secondary);
            border-radius: var(--radius-full);
            transition: all var(--transition-fast);
        }

        header nav a:hover {
            color: var(--color-text-primary);
            background: rgba(255, 255, 255, 0.05);
        }

        main {
            padding: 100px 24px 80px;
            position: relative;
            z-index: 1;
        }

        .chat-list-container {
            max-width: 900px;
            margin: 0 auto;
            animation: fadeIn 0.6s ease-out;
        }

        .page-header {
            background: var(--gradient-accent);
            border-radius: var(--radius-xl);
            padding: 48px;
            margin-bottom: 48px;
            box-shadow: var(--shadow-xl);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
        }

        .page-header h1 {
            font-size: 48px;
            margin-bottom: 8px;
            color: white;
            position: relative;
            z-index: 1;
        }

        .page-header p {
            font-size: 21px;
            color: rgba(255, 255, 255, 0.9);
            position: relative;
            z-index: 1;
        }

        .chats-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .chat-item {
            background: var(--color-surface);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: var(--radius-xl);
            padding: 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all var(--transition-base);
            text-decoration: none;
            color: inherit;
            box-shadow: var(--shadow-sm);
            position: relative;
            overflow: hidden;
        }

        .chat-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-accent);
            transform: scaleX(0);
            transition: transform var(--transition-base);
        }

        .chat-item:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .chat-item:hover::before {
            transform: scaleX(1);
        }

        .chat-item-info {
            flex: 1;
        }

        .chat-item h3 {
            font-size: 21px;
            margin-bottom: 4px;
            color: var(--color-text-primary);
        }

        .chat-item p {
            font-size: 17px;
            color: var(--color-text-secondary);
        }

        .chat-arrow {
            font-size: 21px;
            color: var(--color-accent);
            margin-left: 16px;
        }

        .empty-state {
            text-align: center;
            padding: 80px 32px;
            color: var(--color-text-secondary);
        }

        .empty-state p {
            font-size: 21px;
        }

        footer {
            padding: 40px 24px;
            text-align: center;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            background: var(--color-surface);
            position: relative;
            z-index: 1;
        }

        footer p {
            color: var(--color-text-tertiary);
            font-size: 14px;
        }

        @media (max-width: 768px) {
            .page-header {
                padding: 32px 24px;
            }

            .page-header h1 {
                font-size: 36px;
            }
        }
    </style>
</head>
<body>
    <div class="header-container">
        <header>
            <a href="/" class="logo">StudyMatch</a>
            <nav>
                <a href="/dashboard">Dashboard</a>
                <a href="/preferences">Preferences</a>
                <a href="/friend-requests">Friend Requests</a>
                <a href="/chat">Chat</a>
                <a href="/logout">Logout</a>
            </nav>
        </header>
    </div>

    <main>
        <div class="chat-list-container">
            <div class="page-header">
                <h1>Your Chats</h1>
                <p>Select a friend to start chatting</p>
            </div>

            <% if (typeof chatResults === 'undefined' || chatResults.length === 0) { %>
                <div class="empty-state">
                    <p>No friends to chat with yet. Accept friend requests to start chatting!</p>
                </div>
            <% } else { %>
                <section class="chats-grid">
                    <% chatResults.forEach(chatUser => { %>
                        <a href="/chat/<%= chatUser.sender_id %>" class="chat-item">
                            <div class="chat-item-info">
                                <h3><%= chatUser.username %></h3>
                                <p>Click to start chatting</p>
                            </div>
                            <span class="chat-arrow">→</span>
                        </a>
                    <% }) %>
                </section>
            <% } %>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 StudyMatch. Created by a UofT student.</p>
    </footer>
</body>
</html>
