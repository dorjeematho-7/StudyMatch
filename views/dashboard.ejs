<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard – StudyMatch</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <style>
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }
        .welcome-section {
            text-align: center;
            padding: 2rem;
            background-color: var(--accent-bg);
            border-radius: var(--standard-border-radius);
            margin-bottom: 2rem;
        }
        .welcome-section h1 {
            margin-bottom: 0.5rem;
        }
        .welcome-section p {
            color: var(--text-light);
            margin: 0;
        }
        .users-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }
        .user-card {
            border: var(--border-width) solid var(--border);
            border-radius: var(--standard-border-radius);
            padding: 1.5rem;
            background-color: var(--bg);
            display: flex;
            flex-direction: column;
        }
        .user-card h3 {
            margin-top: 0;
            margin-bottom: 1rem;
            padding-bottom: 0.75rem;
            border-bottom: var(--border-width) solid var(--border);
        }
        .user-info {
            flex: 1;
            margin-bottom: 1rem;
        }
        .user-info p {
            margin: 0.75rem 0;
        }
        .user-info strong {
            display: inline-block;
            min-width: 100px;
            font-weight: 600;
        }
        .friend-request-btn {
            width: 100%;
            padding: 0.75rem;
            margin-top: auto;
            font-size: 1rem;
            cursor: pointer;
        }
        .friend-request-btn:disabled {
            cursor: not-allowed;
            opacity: 0.7;
        }
        .friend-request-sent {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }
        .friend-request-accepted {
            background-color: #17a2b8;
            border-color: #17a2b8;
            color: white;
        }
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-light);
        }
        .flash-message {
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: var(--standard-border-radius);
            border: var(--border-width) solid;
        }
        .flash-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }
        .flash-error {
            background-color: #f8d7da;
            border-color: #f5c6cb;
            color: #721c24;
        }
        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--accent);
            text-decoration: none;
        }
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background-color: var(--accent-bg);
            border-bottom: var(--border-width) solid var(--border);
        }
        header nav {
            display: flex;
            gap: 1rem;
        }
        header nav a {
            padding: 0.5rem 1rem;
            text-decoration: none;
            border: var(--border-width) solid transparent;
        }
        header nav a:hover {
            border-color: var(--accent);
        }
        body {
            display: block;
        }
        body > * {
            grid-column: 1;
        }
        form {
            margin: 0;
        }
    </style>
</head>
<body>
    <header>
        <a href="/" class="logo">StudyMatch</a>
        <nav>
            <a href="/dashboard">Dashboard</a>
            <a href="/preferences">Preferences</a>
            <a href="/friend-requests">Friend Requests</a>
            <a href="/chat">Chat</a>
            <a href="/logout">Logout</a>
        </nav>
    </header>

    <main>
        <div class="dashboard-container">
            <div class="welcome-section">
                <h1>Welcome, <%= user.username %>!</h1>
                <p>Browse other students and find your perfect study partners</p>
            </div>

            <% if (typeof messages !== 'undefined') { %>
                <% if (messages.success_msg) { %>
                    <div class="flash-message flash-success">
                        <%= messages.success_msg %>
                    </div>
                <% } %>
                <% if (messages.error) { %>
                    <div class="flash-message flash-error">
                        <%= messages.error %>
                    </div>
                <% } %>
            <% } %>

            <% if (users.length === 0) { %>
                <div class="empty-state">
                    <p>No other users available yet. Check back soon!</p>
                </div>
            <% } else { %>
                <section class="users-grid">
                    <% users.forEach(u => { %>
                        <article class="user-card">
                            <h3><%= u.username %></h3>
                            <div class="user-info">
                                <% if (u.courses) { %>
                                    <p><strong>Courses:</strong> <%= u.courses %></p>
                                <% } %>
                                <% if (u.availability) { %>
                                    <p><strong>Availability:</strong> <%= u.availability %></p>
                                <% } %>
                                <% if (u.study_style) { %>
                                    <p><strong>Study Style:</strong> <%= u.study_style %></p>
                                <% } %>
                                <% if (u.study_format) { %>
                                    <p><strong>Format:</strong> <%= u.study_format %></p>
                                <% } %>
                                <% if (u.location) { %>
                                    <p><strong>Location:</strong> <%= u.location %></p>
                                <% } %>
                            </div>

                            <% if (u.friendRequestStatus === 'pending') { %>
                                <button class="friend-request-btn friend-request-sent" disabled>
                                    Friend Request Sent
                                </button>
                            <% } else if (u.friendRequestStatus === 'accepted') { %>
                                <button class="friend-request-btn friend-request-accepted" disabled>
                                    Friends ✓
                                </button>
                            <% } else { %>
                                <form action="/friend-request" method="POST" style="margin: 0;">
                                    <input type="hidden" name="recipient_id" value="<%= u.id %>">
                                    <button type="submit" class="friend-request-btn">
                                        Send Friend Request
                                    </button>
                                </form>
                            <% } %>
                        </article>
                    <% }) %>
                </section>
            <% } %>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 StudyMatch. Created by a UofT student.</p>
    </footer>
</body>
</html>