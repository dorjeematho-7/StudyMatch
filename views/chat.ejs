<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat – StudyMatch</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            background: #f5f5f7;
            min-height: 100vh;
            position: relative;
        }

        .header-container {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: saturate(180%) blur(20px);
            -webkit-backdrop-filter: saturate(180%) blur(20px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.08);
        }

        header {
            max-width: 1200px;
            margin: 0 auto;
            padding: 16px 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 21px;
            font-weight: 600;
            color: #1d1d1f;
            text-decoration: none;
            letter-spacing: -0.022em;
        }

        header nav {
            display: flex;
            gap: 8px;
        }

        header nav a {
            padding: 8px 16px;
            font-size: 17px;
            color: #1d1d1f;
            border-radius: 980px;
            transition: all 150ms cubic-bezier(0.4, 0, 0.2, 1);
        }

        header nav a:hover {
            background: #f5f5f7;
        }

        main {
            padding: 100px 24px 80px;
            position: relative;
            z-index: 1;
        }

        .chat-list-container {
            max-width: 900px;
            margin: 0 auto;
            animation: fadeIn 0.6s ease-out;
        }

        .page-header {
            background: linear-gradient(135deg, #0071e3 0%, #0051d5 100%);
            border-radius: 24px;
            padding: 48px;
            margin-bottom: 48px;
            box-shadow: 0 8px 32px rgba(0, 113, 227, 0.3);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
        }

        .page-header h1 {
            font-size: 48px;
            margin-bottom: 8px;
            color: white;
            position: relative;
            z-index: 1;
            font-weight: 700;
            letter-spacing: -0.003em;
        }

        .page-header p {
            font-size: 21px;
            color: rgba(255, 255, 255, 0.95);
            position: relative;
            z-index: 1;
            font-weight: 400;
        }

        .chats-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .chat-item {
            background: #ffffff;
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 24px;
            padding: 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 300ms cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            color: inherit;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
            position: relative;
            overflow: hidden;
        }

        .chat-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #0071e3 0%, #0051d5 100%);
            transform: scaleX(0);
            transition: transform 300ms cubic-bezier(0.4, 0, 0.2, 1);
        }

        .chat-item:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
            border-color: rgba(0, 0, 0, 0.1);
        }

        .chat-item:hover::before {
            transform: scaleX(1);
        }

        .chat-item-info {
            flex: 1;
        }

        .chat-item h3 {
            font-size: 21px;
            margin-bottom: 4px;
            color: #1d1d1f;
            font-weight: 600;
            letter-spacing: -0.003em;
        }

        .chat-item p {
            font-size: 17px;
            color: #6e6e73;
            line-height: 1.47059;
        }

        .chat-arrow {
            font-size: 21px;
            color: #0071e3;
            margin-left: 16px;
        }

        .empty-state {
            text-align: center;
            padding: 80px 32px;
            color: #6e6e73;
            background: #ffffff;
            border-radius: 24px;
            border: 1px solid rgba(0, 0, 0, 0.05);
        }

        .empty-state p {
            font-size: 21px;
            font-weight: 400;
        }

        footer {
            padding: 40px 24px;
            text-align: center;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            background: #ffffff;
            position: relative;
            z-index: 1;
        }

        footer p {
            color: #86868b;
            font-size: 14px;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.7;
            }
        }

        @media (max-width: 768px) {
            .page-header {
                padding: 32px 24px;
            }

            .page-header h1 {
                font-size: 36px;
            }
        }
    </style>
</head>
<body>
    <div class="header-container">
        <header>
            <a href="/" class="logo">StudyMatch</a>
            <nav>
                <a href="/dashboard">Dashboard</a>
                <a href="/preferences">Preferences</a>
                <a href="/friend-requests">Friend Requests</a>
                <a href="/chat">Chat</a>
                <a href="/logout">Logout</a>
            </nav>
        </header>
    </div>

    <main>
        <div class="chat-list-container">
            <div class="page-header">
                <h1>Your Chats</h1>
                <p>Select a friend to start chatting</p>
            </div>

            <% if (typeof chatResults === 'undefined' || chatResults.length === 0) { %>
                <div class="empty-state">
                    <p>No friends to chat with yet. Accept friend requests to start chatting!</p>
                </div>
            <% } else { %>
                <section class="chats-grid">
                    <% chatResults.forEach(chatUser => { %>
                        <a href="/chat/<%= chatUser.id %>" class="chat-item">
                            <div class="chat-item-info">
                                <h3><%= chatUser.username %></h3>
                                <p>Click to start chatting</p>
                            </div>
                            <span class="chat-arrow">→</span>
                        </a>
                    <% }) %>
                </section>
            <% } %>
        </div>
    </main>

    <footer>
        <p>&copy; 2024 StudyMatch. Created by a UofT student.</p>
    </footer>
</body>
</html>

